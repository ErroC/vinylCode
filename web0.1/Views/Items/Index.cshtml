
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/shared/_Layout.cshtml";
    var total = 0;
}
@using web0._1.Models

<table class="table">
    <tr>
        <th>Product Name |</th>
        <th>Price |</th>
        <th>quatity |</th>
        <th>sub total |</th>
    </tr>


    @foreach (var item in (List<Items>)Session["cartp"])
    {
        <tr>
            <td>@item.Product.Pro_Name</td>
            <td>@item.Product.Pro_price</td>
            <td>@item.Quantity</td>
            <td>@(item.Quantity * item.Product.Pro_price)</td>

            <td>
                |
                @*@Html.ActionLink("Items", "Delete", new { id = item.Product.Pro_id })*@
                <button onclick="location.href='@Url.Action("Items","Delete", new {id=item.Product.Pro_id})'"></button>
                <button onclick="location.href='@Url.Action("Items","Add", new {id=item.Product.Pro_id })'"></button>
            </td>
        </tr>
        @total += (item.Quantity * item.Product.Pro_price);

    }
</table>
<h2>Your total amount is @total</h2>


